extends layout

block content
    .row
        .col-12.col-md-8
            .container
                .row
                .col
                    h1.text-center Chess Games
                    form(action='chess', method='POST')
                        select(name='')
                            each player in players
                                option(value=player) #{player}
                        input(type='submit', value='Submit')
                    

                .row
                    .col
                        .table-responsive
                        table.table.table-sm.table-hover
                            thead
                                tr
                                    th Url
                                    th Rules
                                    th Rated
                                    th Time Class
                                    th White Result
                            tbody
                               
                                    each chosenPlayerGame in chosenPlayers
                                       tr
                                        each Game in chosenPlayerGame.games
                                            tr
                                                td #{Game.url}
                                                td #{Game.rules}
                                                td #{Game.rated}
                                                td #{Game.time_class}
                                                td #{Game.whiteusername + " " + Game.whiteResult}

